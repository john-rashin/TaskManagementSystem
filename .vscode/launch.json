{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch with Hot Reload",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "watch-run",
            "program": "${workspaceFolder}/bin/Debug/net8.0/TaskManagementSystem.dll",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Users": "${workspaceFolder}"
            }
        }
    ]
}
